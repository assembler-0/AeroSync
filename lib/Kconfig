menu "lib"

config LIST_HARDENED
    bool "Enable hardened linked-list"
    default n

config DEBUG_PLIST
    bool "Enabled debug plist (priority lists)"
    default n

config INTERVAL_TREE_SPAN_ITER
    bool "Enable interval tree span interation"
    default y

config QUEUE_MACRO_DEBUG_ASSERTIONS
    bool "Enable bsd queue assertions"
    default n

config OPTIMIZED_STRING
    bool "Enable optimized string functions"
    default y
    help
      Use architecture-specific (x86_64) optimized implementations for
      string and memory functions (memcpy, memset, etc.) using ERMS/FSRM.

config LIBC_STRING_FULL
    bool "Enable full suite of C string functions"
    default y
    help
      Include the complete set of C standard string functions (strtok,
      strcspn, etc.) in the kernel.

config KSTRTO_ERRORS
    bool "Enable detailed kstrto* error reporting"
    default y
    help
      Enable detailed error codes (EINVAL, ERANGE) for kernel string-to-number
      conversion functions.

config STRING_FLOAT
    bool "Enable floating-point string conversions"
    default y
    help
      Include strtod, strtof and floating-point conversion functions.
      Increases kernel size significantly.

config STRING_PATTERN
    bool "Enable pattern matching functions"
    default y
    help
      Include fnmatch, glob-style pattern matching for filesystem operations.

config STRING_ADVANCED
    bool "Enable advanced memory functions"
    default y
    help
      Include memrchr, memmem, memswap and other advanced memory operations.

config STRING_CRYPTO
    bool "Enable cryptographic string functions"
    default y
    help
      Include constant-time comparison and crypto-safe string functions.

config PRINTK_COLOR
    bool "Enable ANSI color support for printk"
    default y
    help
      Enables support for ANSI color escape sequences in printk output.

endmenu
