{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 30,
    "patch": 0
  },

  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },

    {
      "name": "amd64-hardened",
      "displayName": "AeroSync (R) hardened release build for amd64",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_TOOLCHAIN_FILE": "cmake/toolchain/clang.cmake",
        "AEROSYNC_DEFCONFIG": "amd64-hardened",
        "STACK_PROTECTION": "OFF",
        "STACK_PROTECTION_ALL": "ON",
        "SANITIZER": "ON",
        "LTO": "ON"
      }
    },

    {
      "name": "amd64",
      "displayName": "AeroSync (R) release build for amd64",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_TOOLCHAIN_FILE": "cmake/toolchain/clang.cmake",
        "AEROSYNC_DEFCONFIG": "amd64",
        "STACK_PROTECTION": "ON",
        "STACK_PROTECTION_ALL": "OFF",
        "SANITIZER": "OFF",
        "LTO": "ON"
      }
    }
  ],

  "buildPresets": [
    {
      "name": "amd64-hardened",
      "configurePreset": "amd64-hardened",
      "jobs": 0
    },
    {
      "name": "amd64",
      "configurePreset": "amd64",
      "jobs": 0
    }
  ]
}
